# KleverInvest Hub - Production Environment Configuration

# Application
VITE_APP_NAME=KleverInvest Hub
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=production

# Database Configuration for Production
# Choose your production database:

# Option 1: Supabase (Recommended for quick setup)
VITE_DB_TYPE=supabase
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-production-anon-key
VITE_SUPABASE_SERVICE_KEY=your-production-service-key

# Option 2: PostgreSQL/MySQL (Self-hosted)
# VITE_DB_TYPE=postgresql
# VITE_API_URL=https://your-api-domain.com/api
# VITE_ENABLE_BACKEND=true

# API Configuration
VITE_ENABLE_BACKEND=true
VITE_API_URL=https://your-backend-api.com/api
VITE_DB_TIMEOUT=10000

# Authentication & Security
VITE_JWT_SECRET=your-production-jwt-secret-key-here
VITE_SESSION_TIMEOUT=86400000
VITE_REFRESH_TOKEN_TIMEOUT=604800000
VITE_ENABLE_2FA=true
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_LOCKOUT_DURATION=900000
VITE_PASSWORD_MIN_LENGTH=8

# Payment Gateway Configuration (Production Keys)
VITE_STRIPE_PUBLIC_KEY=pk_live_your-stripe-live-public-key
VITE_PAYPAL_CLIENT_ID=your-paypal-live-client-id
VITE_COINBASE_API_KEY=your-coinbase-live-api-key

# Cryptocurrency Configuration
VITE_SUPPORTED_CRYPTOS=BTC,ETH,USDT,USDC,BNB
VITE_DEFAULT_CRYPTO=BTC
VITE_PRICE_API_URL=https://api.coingecko.com/api/v3

# Email Service Configuration (Production)
VITE_EMAIL_SERVICE=sendgrid
VITE_SENDGRID_API_KEY=your-production-sendgrid-api-key
VITE_FROM_EMAIL=noreply@yourdomain.com
VITE_SUPPORT_EMAIL=support@yourdomain.com

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx
VITE_UPLOAD_URL=https://your-backend-api.com/api/upload

# Feature Flags (Production)
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_KYC=true
VITE_ENABLE_REFERRALS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_CHAT=true
VITE_MAINTENANCE_MODE=false

# Business Configuration
VITE_MIN_DEPOSIT=100
VITE_MAX_DEPOSIT=100000
VITE_MIN_WITHDRAWAL=50
VITE_WITHDRAWAL_FEE=2.5
VITE_REFERRAL_COMMISSION=10

# Company Information (Update with your details)
VITE_COMPANY_NAME=Your Company LLC
VITE_COMPANY_ADDRESS=Your Business Address
VITE_COMPANY_PHONE=+1-555-YOUR-PHONE
VITE_COMPANY_EMAIL=info@yourdomain.com
VITE_COMPANY_WEBSITE=https://yourdomain.com

# Social Media (Update with your accounts)
VITE_SOCIAL_TWITTER=https://twitter.com/yourcompany
VITE_SOCIAL_LINKEDIN=https://linkedin.com/company/yourcompany
VITE_SOCIAL_FACEBOOK=https://facebook.com/yourcompany
VITE_SOCIAL_TELEGRAM=https://t.me/yourcompany

# Analytics (Production)
VITE_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
VITE_HOTJAR_ID=your-hotjar-id
VITE_ENABLE_ANALYTICS=true

# Development/Debug (Disabled for production)
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error
VITE_ENABLE_MOCK_DATA=false

# Production Security
VITE_FORCE_HTTPS=true
VITE_SECURE_COOKIES=true
VITE_CSP_ENABLED=true

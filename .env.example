# Development Environment Variables

# Application Settings
VITE_APP_NAME=KleverInvest Hub
VITE_APP_ENV=development
VITE_DEBUG_MODE=true

# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_TIMEOUT=10000

# Database Configuration (Choose one)
# Supabase
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# PostgreSQL
VITE_DATABASE_URL=postgresql://username:password@localhost:5432/kleverinvest

# MySQL
VITE_MYSQL_HOST=localhost
VITE_MYSQL_PORT=3306
VITE_MYSQL_USER=root
VITE_MYSQL_PASSWORD=password
VITE_MYSQL_DATABASE=kleverinvest

# Builder.io CMS Integration
VITE_BUILDER_PUBLIC_KEY=your_builder_public_key
VITE_BUILDER_API_KEY=your_builder_private_api_key
VITE_BUILDER_MODEL_PREFIX=klever

# Authentication
VITE_JWT_SECRET=your_jwt_secret_key
VITE_AUTH_COOKIE_NAME=klever_auth
VITE_SESSION_TIMEOUT=3600000

# Payment Gateways
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id
VITE_COINBASE_API_KEY=your_coinbase_api_key

# Email Service
VITE_SENDGRID_API_KEY=your_sendgrid_api_key
VITE_FROM_EMAIL=noreply@kleverinvest.com

# Storage
VITE_AWS_BUCKET=your_s3_bucket
VITE_AWS_REGION=us-east-1
VITE_CLOUDINARY_CLOUD_NAME=your_cloudinary_name

# External Services
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
VITE_CRYPTO_API_KEY=your_crypto_api_key

# Security
VITE_ENABLE_2FA=true
VITE_PASSWORD_MIN_LENGTH=8
VITE_MAX_LOGIN_ATTEMPTS=5

# Features
VITE_ENABLE_LIVE_CHAT=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true
